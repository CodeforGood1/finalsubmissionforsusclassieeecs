# Environment Configuration for Sustainable Classroom LMS

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://lms_admin:SecureLocalDB2026@localhost:5432/sustainable_classroom

# SSL mode for database connection (set to 'true' for production databases)
DB_SSL=false

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Node environment: development | production
NODE_ENV=development

# Server port (default: 5000)
PORT=5000

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT secret key (MUST BE CHANGED IN PRODUCTION - use 64+ random characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=OnPremiseSecureKey2026AfricaChallenge

# Admin account credentials (change immediately after first login)
ADMIN_EMAIL=admin@classroom.local
ADMIN_PASSWORD=Admin@2026

# ===========================================
# EMAIL CONFIGURATION (Option 1: Gmail)
# ===========================================
# Gmail account for sending emails
GMAIL_USER=your-email@gmail.com

# Gmail App Password (16 characters, no spaces)
# Generate at: https://myaccount.google.com/apppasswords
# Requires 2-Factor Authentication enabled
GMAIL_APP_PASSWORD=your-16-char-app-password

# ===========================================
# EMAIL CONFIGURATION (Option 2: Custom SMTP)
# ===========================================
# SMTP server hostname
SMTP_HOST=smtp.example.com

# SMTP port (587 for TLS, 465 for SSL, 25 for plain)
SMTP_PORT=587

# Use SSL/TLS (true | false)
SMTP_SECURE=false

# SMTP authentication credentials
SMTP_USER=smtp-username
SMTP_PASSWORD=smtp-password

# Email sender details
EMAIL_FROM_NAME=Sustainable Classroom
EMAIL_FROM_ADDRESS=noreply@classroom.local

# ===========================================
# REDIS CACHE (OPTIONAL)
# ===========================================
# Enable Redis caching for better performance
REDIS_ENABLED=false

# Redis connection URL
# Format: redis://username:password@host:port
REDIS_URL=redis://localhost:6379

# Or separate Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# APPLICATION URLS
# ===========================================
# Frontend URL (used for email links and CORS)
FRONTEND_URL=http://localhost:5000

# ===========================================
# FILE STORAGE
# ===========================================
# Directory for uploaded files (relative to backend folder)
UPLOAD_DIR=uploads

# Maximum file size in MB
MAX_FILE_SIZE=50

# ===========================================
# LOGGING & MONITORING
# ===========================================
# Log level: error | warn | info | debug
LOG_LEVEL=info

# ===========================================
# OPTIONAL FEATURES
# ===========================================
# Enable in-app notifications
ENABLE_NOTIFICATIONS=true

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=true

# Session timeout in hours
SESSION_TIMEOUT=24
