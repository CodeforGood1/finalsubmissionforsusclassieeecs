{
  "name": "sustainable-classroom-backend",
  "version": "2.0.0",
  "description": "On-Premise Backend server for Sustainable Classroom e-learning platform - Africa Challenge Finals",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node seed.js",
    "db:seed": "node seed.js",
    "db:reset": "node seed.js",
    "test:notify": "node tests/notification-db.test.js",
    "test": "jest --verbose --runInBand",
    "setup:dirs": "node -e \"require('./localStorageService').ensureUploadDirs()\"",
    "backup:db": "pg_dump $DATABASE_URL > backup-$(date +%Y%m%d).sql"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "server.js",
      "notificationService.js",
      "localStorageService.js",
      "localEmailService.js"
    ],
    "testTimeout": 10000
  },
  "keywords": [
    "education",
    "elearning",
    "nodejs",
    "express",
    "on-premise",
    "offline",
    "africa-challenge"
  ],
  "author": "SusClass Global",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.12",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "socket.io": "^4.8.3",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "better-sqlite3": "^12.6.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
